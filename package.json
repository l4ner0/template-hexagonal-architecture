{
  "name": "template-hexgonal-architecture",
  "version": "1.0.0",
  "description": "",
  "main": "./build/app.js",
  "scripts": {
    "start": "tsc && cross-env NODE_ENV=production NODE_PATH=build/app.js node build/app.js",
    "start:dev": "tsc && cross-env NODE_ENV=development NODE_PATH=build/app.js node build/app.js",
    "start:local": "cross-env NODE_ENV=local NODE_PATH=src/app.ts ts-node-dev src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts --cache",
    "lint-fix": "eslint src/**/*.ts --cache --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "glob": "^7.2.0",
    "helmet": "^6.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/glob": "^7.1.4",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint src/**/*.ts --cache --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  }
